{% extends('base.html.twig') %}
{% block title %}
Payments
{% endblock %}

{% block stylesheets %} {% endblock %}
{% block body %} 

<div class="container-fluid">
    <h1 class="text-center" style="color: white;">Registered payments</h1>
    <div class="row">
        <div class="d-grid gap-2 col-12 mx-auto">
            <button type="button" data-bs-toggle="modal" data-bs-target="#modal-payments" class="btn btn-primary btn-block">Register a payment</button>
        </div>
    </div>
    <table id="table" class="table table-responsive table-hover table-dark">
        <thead>
        <tr>
            <th scope="col" class="text-center">Modify</th>
            <th scope="col" class="text-center">Delete</th>
            <th scope="col">Customer number</th>
            <th scope="col">Check number</th>
            <th scope="col">Payment date</th>
            <th scope="col">Amount</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {% for payments in lista %}
        <tr>
            <td>
                <button type="button" data-bs-toggle="modal" data-bs-target="#modal-payments-modify" class="btn btn-primary"><i class="fas fa-edit"></i></button>
            </td>
            <td>
                <button class="btn btn-danger"><i class="fas fa-trash"></i></button>
            </td>
            <td>
                {{payments.customernumber}}
            </td>
            <td>
                {{payments.checknumber}}
            </td>
            <td>
                {{payments.paymentdate.format('d/m/Y')}}
            </td>
            <td>
                {{payments.amount}}
            </td>
        </tr>
        {% endfor %}</tbody>
    </table>
    <div class="modal fade" id="modal-payments"  style="color: white;" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content" style="background-color: #343a40;">
                <div class="container-fluid">
                    <h1 class="text-center">Payments register</h1>
                    <hr>
                    <form>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label>Customer number</label>
                                <input type="number" class="form-control" id="customerNumber" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Check number</label>
                                <input type="number" class="form-control" id="checkNumber"required>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Payment date</label>
                                <input type="date" class="form-control" id="paymentDate"required>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Amount</label>
                                <input type="number" class="form-control" id="amount"required>
                            </div>
                        </div>

                        <button style="margin-top: 10px;margin-bottom: 10px;" type="button" class="btn btn-primary d-grid gap-2 col-6 mx-auto">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modal-payments-modify"  style="color: white;" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content" style="background-color: #343a40;">
                <div class="container-fluid">
                    <h1 class="text-center">Payments modify</h1>
                    <hr>
                    <form>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label>Customer number</label>
                                <input type="number" class="form-control" id="customerNumberM" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Check number</label>
                                <input type="number" class="form-control" id="checkNumberM"required>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Payment date</label>
                                <input type="date" class="form-control" id="paymentDateM"required>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Amount</label>
                                <input type="number" class="form-control" id="amountM"required>
                            </div>
                        </div>

                        <button style="margin-top: 10px;margin-bottom: 10px;" type="button" class="btn btn-primary d-grid gap-2 col-6 mx-auto">Modify</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
{% endblock %}